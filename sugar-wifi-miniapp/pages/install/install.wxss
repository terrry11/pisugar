/* pages/install/install.wxss */
.container{
  position: relative;
  text-align: center;
  width:100%;
  box-sizing: border-box;
  padding: 0 20px;
}
.logo-img{
  width: 100px;
  height: 35px;
  margin: 20px auto;
}
.title{
  font-size: 30rpx;
  font-weight: bold;
}
.content{
  position: relative;
  display: block;
  background-color: #333;
  width: 100%;
  height: 180px;
  padding: 20px;
  text-align: left;
  color: white;
  border-radius: 5px;
  margin: 10px 0;
  font-size: 26rpx;
  box-sizing: border-box;
}
.desc{
  margin: 6px;
  display: block;
  font-size: 24rpx;
  color: #333;
}